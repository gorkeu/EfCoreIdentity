@{
}
@model SignupViewModel
@section Scripts
{

    @await Html.PartialAsync("_ValidationScriptsPartial");

}


<form method="post">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Sign Up</h2>
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row mb-3">
                <label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" type="email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Username" class="col-sm-2 col-form-label" asp-for="Username"></label>
                <div class="col-sm-10">
                    <input asp-for="Username" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Phone" class="col-sm-2 col-form-label" asp-for="Phone"></label>
                <div class="col-sm-10">
                    <input asp-for="Phone" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-sm-2 col-form-label" asp-for="Password"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="PasswordConfirm" class="col-sm-2 col-form-label" asp-for="PasswordConfirm"></label>
                <div class="col-sm-10">
                    <input asp-for="PasswordConfirm" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>
            </div>
            <div class="offset-md-10">
                <button type="submit" class="btn btn-primary">Sign up</button>
            </div>
        </div>
    </div>

</form>

